
<% @order_items.each do |item| %>
  <hr>
  <div class="row">
    <%= image_tag(item.product.image, style:"max-height: 100px; max-width: 100px;") %>
    <h3><%= item.product.name%></h3>
    <span>
    <h4 style="color:gray; margin-left: 5px;">  $<%= item.product.price %></h4>
  <%= form_with model: item do |f|%>
    <%= link_to "Remove Items", item, method: :delete %>
  <% end%>
  </div>
  <h3>Subtotal: <%= item.total %></h3>
<% end %>
<hr>
<h2>Your order total: $<%= current_order.subtotal %></h2>